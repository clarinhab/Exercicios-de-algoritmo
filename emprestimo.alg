algoritmo "emprestimo"
var
   emprestimo, juros: Real
   parcelas: Inteiro

inicio
      Escreval ("Olá, Marina, bom dia! Tudo bem?")
      Escreva ("Qual o valor do emprestimo? R$ ")
      Leia (emprestimo)
      Escreva ("Quantas parcelas? ")
      Leia (parcelas)
      juros <- (emprestimo * 12)/100
      Escreva ("Vou pagar", parcelas , " parcelas de R$", juros)







fimalgoritmo
